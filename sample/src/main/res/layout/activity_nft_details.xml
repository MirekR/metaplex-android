<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:ignore="SpeakableTextPresentCheck">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_100"
        android:orientation="vertical"
        tools:context=".NftDetailsActivity">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp">

            <ImageView
                android:id="@+id/nftImageBackground"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:background="@color/gray_100"
                android:foreground="@drawable/nft_image_gradient"
                android:scaleType="centerCrop"
                android:src="@drawable/samplenft" />

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="bottom|center"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/nftImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/neutral_800"
                    android:scaleType="centerCrop"
                    android:src="@drawable/samplenft" />
            </androidx.cardview.widget.CardView>
        </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="30dp"
                android:paddingVertical="15dp"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OnlyHands 3266"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OnlyHands is a series of 3,337 custom designed NFTs on the Solana Blockchain. We are also the FIRST EVER community driven animated NFT series."
                    android:textColor="#848A88"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

    </LinearLayout>
</ScrollView>
